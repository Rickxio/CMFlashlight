<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlack1</item>
        <item name="colorPrimaryDark">@color/colorBlack1</item>
        <item name="colorAccent">@color/colorBlack1</item>
        <item name="android:windowBackground">@color/colorBlack1</item>
    </style>

    <style name="main_setting_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#38E1D0</item>
        <item name="colorSwitchThumbNormal">#999999</item>
        <item name="android:colorForeground">#808080</item>
    </style>

    <style name="AlertTheme" parent="Theme.AppCompat.Light.Dialog" >
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MoreTextStyle">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorWhite1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@drawable/bg_more_click</item>
    </style>

    <style name="settingTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/setting_item_content_margin_x</item>
        <item name="android:layout_marginRight">@dimen/setting_item_content_margin_x</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/setting_item_title</item>
    </style>

    <style name="MoreItemTextStyle">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:textColor">@color/white</item>
       <!-- <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:paddingTop">16dp</item>-->
        <item name="android:gravity">center_horizontal</item>
    </style>

    <declare-styleable name="verticalProgress">
        <attr name="progress_radius" format="dimension" />
        <attr name="progress_border_width" format="dimension" />
        <attr name="progress_gradient_enable" format="boolean" />
        <attr name="progress_border_enable" format="boolean" />
        <attr name="progress_start_color" format="color" />
        <attr name="progress_solid_color" format="color" />
        <attr name="progress_end_color" format="color" />
        <attr name="progress_border_color" format="boolean" />
    </declare-styleable>

</resources>
